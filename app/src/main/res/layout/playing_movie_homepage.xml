<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:id="@+id/fullLayout">

    <androidx.cardview.widget.CardView
        android:elevation="0dp"
        android:id="@+id/cardView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="14dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/poster"
            android:layout_width="200dp"
            android:layout_height="300dp"
            android:scaleType="centerCrop"
            android:src="@drawable/img_1" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_marginTop="8dp"
        android:id="@+id/viewPagerTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sfpro_medium"
        android:text="Avengers - Infinity War"
        android:textColor="@color/bh_text_white"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView2" />

    <TextView
        android:paddingTop="4dp"
        android:paddingBottom="2dp"
        android:id="@+id/viewPagerDescrption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sfpro_medium"
        android:text="2h29m â€¢ Action, adventure, sci-fi"
        android:textColor="@color/txt_seat_available"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewPagerTitle" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewPagerDescrption">

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/movie_star"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:id="@+id/viewPagerRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4.8"
            android:textColor="@color/bh_text_white"
            android:textSize="14dp"
            android:fontFamily="@font/sfpro_medium"
            android:letterSpacing="0.04"
            android:paddingHorizontal="4dp"/>
        <TextView
            android:id="@+id/viewPagerRatingCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(2.333)"
            android:fontFamily="@font/sfpro_medium"
            android:textColor="@color/txt_seat_available"
            android:textSize="12dp"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>